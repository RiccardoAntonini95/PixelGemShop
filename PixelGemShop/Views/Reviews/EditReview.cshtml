@model PixelGemShop.Models.Reviews

@{
    ViewBag.Title = "EditReview";
}

<h2>EditReview</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reviews</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdReview)
        @Html.HiddenFor(model => model.IdUser)
        @Html.HiddenFor(model => model.IdProduct)

        <div>
            @Html.LabelFor(model => model.Rate, "Rate: ")
            @Html.EditorFor(model => model.Rate)
            @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(model => model.Description, "Review: ")
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

        <input type="submit" value="Save" class="btn glow-on-hover" />
    </div>
}

<div>
    @Html.ActionLink("Back", "Index", new { id = Model.IdUser }, new {@class = "btn glow-on-hover" })
</div>
