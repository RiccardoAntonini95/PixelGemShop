@model PixelGemShop.Models.Products

<main>
    @*TAG SEMANTICI HEADER, SECTION, ASIDE ECC.*@
    @*Hero + slogan*@
    <div id="hero" class="text-center position-relative d-flex justify-content-center align-items-center">
        <iframe src="https://www.youtube.com/embed/u7kdVe8q5zs?autoplay=1&mute=1&controls=0&fullscreen=1&start=15" id="youtube" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        <h1 id="heroText">"Unearth Gaming Gems at Pixel Gem Shop: Where Every Purchase is Sparkling Treasure!"</h1>
    </div>
    @*IN PRIMO PIANO*@
    @*OFFERTE*@
    @*SHOP BY CATEGORIES*@
    @*Carousel*@
    <div id="carouselContainer" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@Url.Content("~/Uploads/carousel1.jpg")" class="carousel-pic d-block w-100" alt="..."> @*TODO: 3 banner link a categorie*@
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Uploads/carousel2.jpg")" class="carousel-pic d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Uploads/carousel3.jpg")" class="carousel-pic d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="@Url.Content("~/Uploads/carousel4.jpg")" class="carousel-pic d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselContainer" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselContainer" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</main>