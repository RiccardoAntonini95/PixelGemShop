
@{
    ViewBag.Title = "Index";
}
@if (TempData["Message"] != null)
{
    <div class="alert" role="alert">
        @TempData["Message"]
    </div>
}

@if (!User.Identity.IsAuthenticated)
{
    <h2 class="text-center mb-5">Welcome, sign up or login if you own an account</h2>
    <div class="container d-flex justify-content-center text-smoke">
        @Html.ActionLink("Sign Up", "SignUp", "Login", null, new { @class = "btn btn-darker-accent m-2 glow-on-hover" })
        @Html.ActionLink("Login", "Login", "Login", null, new { @class = "btn m-2 glow-on-hover" })
    </div>
}
else
{
    <h2>You're logged in as User number @User.Identity.Name </h2>
    <p>Logout: </p>
    <form action="@Url.Action("Logout", "Login")" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn glow-on-hover">Logout</button>
    </form>
}

