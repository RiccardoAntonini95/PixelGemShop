@model PixelGemShop.Models.Products

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="col-6 col-md-4 border text-center">
    <p class="fs-2 fw-bold">@Html.DisplayFor(model => model.Name)</p>
    <img src="@Url.Content("~/Uploads/" + @Html.DisplayFor(model => model.Image))" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
    <ul class="list-unstyled">
        <li>
            <span class="fw-bold text-gold">@Html.DisplayNameFor(model => model.Categories.ProductCategory):</span>
            <br />
            @Html.DisplayFor(model => model.Categories.ProductCategory)
        </li>
        <li>
            <span class="fw-bold text-gold">@Html.DisplayNameFor(model => model.Description):</span>
            <br />
            @Html.DisplayFor(model => model.Description)
        </li>
        <li>
            <span class="fw-bold text-gold">@Html.DisplayNameFor(model => model.Stock):</span>
            <br />
            @Html.DisplayFor(model => model.Stock)
        </li>
        <li>
            <span class="fw-bold text-gold">@Html.DisplayNameFor(model => model.Price):</span>
            <br />
            @Html.DisplayFor(model => model.Price)
        </li>
        <li>
            <span class="fw-bold text-gold">@Html.DisplayNameFor(model => model.DiscountPercentage):</span>
            <br />
            @Html.DisplayFor(model => model.DiscountPercentage)
        </li>
    </ul>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit"  class="btn glow-on-hover">Delete</button> |
            @Html.ActionLink("Back", "Index", "Products", null, new { @class = "btn btn-darker-accent glow-on-hover" })
        </div>
    }
</div>
